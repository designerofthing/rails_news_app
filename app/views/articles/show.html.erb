<h1><%= @article.title %></h1><br />
<p><%= @article.content %></p>

<% if user_signed_in? %>
            <%= link_to "Edit Article", edit_article_path(@article), class: 'btn btn-default' %>
            <%= link_to "Delete Article", article_path(@article), class: 'btn btn-default',
            method: :delete,
            data: { confirm: 'Are you sure?'} %>
            <%= link_to 'Back', articles_path, class: 'btn btn-default' %>
            <% else %>
            <%= link_to 'Back', articles_path, class: 'btn btn-default' %>
            <% end %>
