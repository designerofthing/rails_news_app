<!DOCTYPE html>
<html>

<head>
  <title>RailsNewsApp</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

<% if user_signed_in? %>
<%= link_to "New Article", new_article_path %> 
<%= link_to 'Logout', destroy_user_session_path, :method => :delete %>
<% else %>
<%= link_to 'Sign Up to create articles', new_user_registration_path %>
<%= link_to 'Login to create articles', new_user_session_path %>
<% end %>
<%= render 'home/header' %>

  <% if flash[:notice] %>
  <%= flash[:notice] %>
  <% end %>
  <div class='container'>
  <%= yield %>
  </div>
</body>

</html>